@using Bibliotekarz.Data.Model;

@model EditViewModel

<div>
  <form method="post" action="/Home/Edit">
    <input type="hidden" asp-for="Book.Id">

    <div class="mb-3">
      <label asp-for="Book.Autor" class="form-label">Autor</label>
      <input type="text" asp-for="Book.Autor" class="form-control" placeholder="Imie i nazwisko">
    </div>
    <div class="mb-3">
      <label asp-for="Book.Title" class="form-label">Tytuł</label>
      <input asp-for="Book.Title" type="text" class="form-control" placeholder="Tytuł książki">
    </div>
    <div class="mb-3">
      <label asp-for="Book.PageCount" class="form-label">Liczba stron</label>
      <input asp-for="Book.PageCount" type="number" class="form-control">
    </div>
    <div class="mb-3 form-check">
      <label asp-for="Book.IsBorrowed" class="form-label">Czy wypożyczona</label>
      <input asp-for="Book.IsBorrowed" type="checkbox" class="form-check-input">
    </div>
    <div class="mb-3">
      <label class="form-label">Nazwisko wypożyczającego</label>
      <div class="row g-3">
        <div class="col">
          <input asp-for="Book.Borrower.FirstName" type="text" class="form-control" placeholder="Imię wypożyczającego" aria-label="Imię">
        </div>
        <div class="col">
          <input asp-for="Book.Borrower.LastDescription" type="text" class="form-control" placeholder="Nazwisko wypożyczającego" aria-label="Nazwisko">
        </div>
      </div>
    </div>

    <div class="mb-3">
      <input type="submit" class="btn btn-outline-primary">Zapisz</input>
    </div>
  </form>
</div>